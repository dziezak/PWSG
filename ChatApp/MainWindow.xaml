<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Chat"
        Height="480" Width="800"
        MinHeight="240" MinWidth="420">

    <Grid>
        <!-- Definicja wierszy -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Obszar wiadomości -->
            <RowDefinition Height="Auto" />
            <!-- Pasek wpisywania wiadomości -->
        </Grid.RowDefinitions>

        <!-- Pasek menu -->
        <Menu Grid.Row="0" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Connect" Name="ConnectMenuItem" Click="ConnectMenuItem_Click"/>
                <MenuItem Header="Disconnect" Name="DisconnectMenuItem" Click="DisconnectMenuItem_Click" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Obszar wiadomości -->
        <ListBox Name="MessagesListBox" Grid.Row="0" Margin="10"/>

        <!-- Obszar wpisywania wiadomości -->
        <DockPanel Grid.Row="1" Margin="10">
            <TextBox Name="MessageTextBox" 
                     AcceptsReturn="True"
                     VerticalAlignment="Center"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     MinHeight="30"
                     MaxHeight="100"
                     DockPanel.Dock="Left"
                     Width="650"
                     PreviewKeyDown="MessageTextBox_PreviewKeyDown"/>
            <Button Content="Send" Width="80" DockPanel.Dock="Right" Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
